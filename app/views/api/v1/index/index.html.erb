<div ng-app="myApp" ng-controller="myCtrl" ng-init="forecast='sun'">
	<h1>Enter your zip code to get a weather forcast</h1>
  <form name="myForm">
		<input type="text" name="zip" ng-model="input.zip" required five />
    <span class="error" ng-show="myForm.zip.$error.zip">Invalid zip code!</span>
    <button type="submit" ng-click="getForecast()">Get Your Forecast</button>
  </form>

  <h2>Weather for: {{input.zip}}</h2>

  <div ng-repeat="cast in forecast">
  	<h3>{{cast.title}}</h3>
  	<img src="{{cast.icon_url}}">
  	<p>{{cast.fcttext}}</p>
  </div>
</div>